{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": ["stylelint-scss", "stylelint-order"],
  "rules": {
    "declaration-empty-line-before": [
      "never",
      {
        "ignore": ["after-comment"]
      }
    ],
    "order/order": [
      [
        {
          "type": "at-rule",
          "name": "extend"
        },
        {
          "type": "at-rule",
          "name": "include",
          "hasBlock": false,
          "emptyLineBefore": "always"
        },
        {
          "type": "at-rule",
          "name": "include",
          "parameter": "media",
          "hasBlock": false,
          "emptyLineBefore": "always"
        },
        "custom-properties",
        "declarations"
      ]
    ],
    "order/properties-order": [
      [
        {
          "emptyLineBefore": "always",
          "properties": ["@extend"]
        },
        {
          "properties": ["@include", "@mixin", "all"]
        },
        {
          "groupName": "Content",
          "emptyLineBefore": "never",
          "properties": [
            "content",
            "order",
            "-webkit-order",
            "-ms-flex-order",
            "overflow",
            "overflow-y",
            "-ms-overflow-y",
            "overflow-x",
            "-ms-overflow-x",
            "-webkit-overflow-scrolling",
            "-ms-overflow-style",
            "cursor",
            "visibility",
            "opacity",
            "pointer-events"
          ]
        },
        {
          "groupName": "Positioning",
          "emptyLineBefore": "never",
          "properties": [
            "position",
            "display",
            "top",
            "right",
            "bottom",
            "left",
            "inset",
            "align-items",
            "-webkit-align-items",
            "align-self",
            "-webkit-align-self",
            "align-content",
            "-webkit-align-content",
            "justify-content",
            "-webkit-justify-content",
            "justify-self",
            "-webkit-justify-self",
            "justify-items",
            "-webkit-justify-items",
            "z-index"
          ]
        },
        {
          "groupName": "Grid Model",
          "emptyLineBefore": "never",
          "properties": [
            "grid-area,",
            "grid-auto-columns",
            "grid-auto-flow",
            "grid-auto-rows",
            "grid-column",
            "grid-column-end",
            "grid-column-start",
            "grid-row",
            "grid-row-end",
            "grid-row-start",
            "grid-template",
            "grid-template-areas",
            "grid-template-rows",
            "grid-template-columns",
            "-ms-grid-column",
            "-ms-grid-columns",
            "-ms-grid-rows",
            "-ms-grid-row-align",
            "-ms-grid-column-align",
            "-ms-grid-column-span",
            "grid-gap",
            "grid-row-gap",
            "grid-column-gap",
            "-ms-grid-row-span",
            "-ms-grid-row",
            "-ms-grid-columns",
            "table-layout"
          ]
        },
        {
          "groupName": "Flex Model",
          "emptyLineBefore": "never",
          "properties": [
            "flex",
            "-webkit-flex",
            "-ms-flex",
            "-webkit-flex-grow",
            "flex-grow",
            "-webkit-flex-shrink",
            "flex-shrink",
            "-webkit-flex-basis",
            "flex-basis",
            "-webkit-flex-flow",
            "flex-flow",
            "-webkit-flex-direction",
            "-ms-flex-direction",
            "flex-direction",
            "-webkit-flex-wrap",
            "flex-wrap"
          ]
        },
        {
          "groupName": "Box Model",
          "emptyLineBefore": "never",
          "properties": [
            "gap",
            "width",
            "max-width",
            "min-width",
            "height",
            "max-height",
            "min-height",
            "margin",
            "margin-top",
            "margin-bottom",
            "margin-right",
            "margin-left",
            "padding",
            "padding-top",
            "padding-bottom",
            "padding-right",
            "padding-left",
            "float",
            "clear"
          ]
        },
        {
          "groupName": "Border",
          "emptyLineBefore": "never",
          "properties": [
            "border",
            "border-radius",
            "-webkit-border-radius",
            "-moz-border-radius",
            "-moz-border-radius-topleft",
            "-webkit-border-top-left-radius",
            "-webkit-border-radius",
            "-moz-border-radius",
            "-webkit-border-top-left-radius",
            "-moz-border-radius-topleft",
            "border-top-left-radius",
            "-webkit-border-top-right-radius",
            "-moz-border-radius-topright",
            "border-top-right-radius",
            "-webkit-border-bottom-right-radius",
            "-moz-border-radius-bottomright",
            "border-bottom-right-radius",
            "-webkit-border-bottom-left-radius",
            "-moz-border-radius-bottomleft",
            "border-bottom-left-radius",
            "border-top-left-radius",
            "border-width",
            "border-style",
            "border-color",
            "border-image",
            "-webkit-border-image",
            "-moz-border-image",
            "-o-border-image",
            "border-image-source",
            "-webkit-border-image-source",
            "-moz-border-image-source",
            "-o-border-image-source",
            "border-image-slice",
            "webkit-border-image-slice",
            "-moz-border-image-slice",
            "-o-border-image-slice",
            "border-image-width",
            "-webkit-border-image-width",
            "-moz-border-image-width",
            "-o-border-image-width",
            "border-image-outset",
            "-webkit-border-image-outset",
            "-moz-border-image-outset",
            "-o-border-image-outset",
            "border-image-repeat",
            "-webkit-border-image-repeat",
            "-moz-border-image-repeat",
            "-o-border-image-repeat",
            "border-top",
            "border-top-width",
            "border-top-style",
            "border-top-color",
            "border-bottom",
            "border-bottom-width",
            "border-bottom-style",
            "border-bottom-color",
            "border-right",
            "border-right-width",
            "border-right-style",
            "border-right-color",
            "border-left",
            "border-left-width",
            "border-left-style",
            "border-left-color",
            "box-sizing",
            "-webkit-box-sizing",
            "-moz-box-sizing",
            "border-collapse",
            "border-spacing",
            "outline",
            "outline-width",
            "outline-style",
            "outline-color",
            "outline-offset"
          ]
        },
        {
          "groupName": "Typography",
          "emptyLineBefore": "never",
          "properties": [
            "font",
            "font-family",
            "src",
            "font-size",
            "line-height",
            "letter-spacing",
            "font-weight",
            "color",
            "text-align",
            "text-transform",
            "text-decoration",
            "vertical-align",
            "direction",
            "font-style",
            "font-variant",
            "font-size-adjust",
            "font-stretch",
            "font-effect",
            "font-emphasize",
            "font-emphasize-position",
            "font-emphasize-style",
            "-webkit-font-smoothing",
            "-moz-osx-font-smoothing",
            "font-smooth",
            "-webkit-text-align-last",
            "-moz-text-align-last",
            "-ms-text-align-last",
            "text-align-last",
            "word-spacing",
            "white-space",
            "overflow-wrap",
            "text-emphasis",
            "text-emphasis-color",
            "text-emphasis-style",
            "text-emphasis-position",
            "text-indent",
            "-ms-text-justify",
            "text-justify",
            "-ms-writing-mode",
            "text-outline",
            "text-wrap",
            "-ms-text-overflow",
            "text-overflow",
            "text-overflow-ellipsis",
            "text-overflow-mode",
            "text-orientation",
            "-ms-word-wrap",
            "word-wrap",
            "-ms-word-break",
            "word-break",
            "-webkit-hyphens",
            "-moz-hyphens",
            "hyphens",
            "unicode-bidi",
            "-moz-tab-size",
            "-o-tab-size",
            "tab-size",
            "columns",
            "column-count",
            "column-fill",
            "column-gap",
            "column-rule",
            "column-rule-color",
            "column-rule-style",
            "column-rule-width",
            "column-span",
            "column-width",
            "text-shadow",
            "page-break-after",
            "page-break-before",
            "page-break-inside",
            "quotes"
          ]
        },
        {
          "groupName": "List Model",
          "emptyLineBefore": "never",
          "properties": [
            "list-style",
            "list-style-position",
            "list-style-type",
            "list-style-image",
            "counter-reset",
            "counter-increment"
          ]
        },
        {
          "groupName": "Background",
          "emptyLineBefore": "never",
          "properties": [
            "background",
            "background-color",
            "background-image",
            "background-position",
            "background-position-x",
            "-ms-background-position-x",
            "background-position-y",
            "-ms-background-position-y",
            "background-size",
            "-webkit-background-size",
            "-moz-background-size",
            "-o-background-size",
            "background-repeat",
            "background-clip",
            "-webkit-background-clip",
            "-moz-background-clip",
            "background-origin",
            "background-attachment",
            "box-decoration-break",
            "background-blend-mode"
          ]
        },
        {
          "groupName": "Transform",
          "emptyLineBefore": "never",
          "properties": []
        },
        {
          "groupName": "Transition",
          "emptyLineBefore": "never",
          "properties": [
            "transform",
            "-webkit-transform",
            "-moz-transform",
            "-ms-transform",
            "-o-transform",
            "-webkit-transform-origin",
            "-moz-transform-origin",
            "-ms-transform-origin",
            "-o-transform-origin",
            "transform-origin",
            "-webkit-transform-style",
            "-moz-transform-style",
            "transform-style",
            "-webkit-backface-visibility",
            "-moz-backface-visibility",
            "backface-visibility",
            "-webkit-perspective",
            "-moz-perspective",
            "perspective",
            "-webkit-perspective-origin",
            "-moz-perspective-origin",
            "perspective-origin"
          ]
        },
        {
          "groupName": "Effects",
          "emptyLineBefore": "never",
          "properties": [
            "box-shadow",
            "-webkit-box-shadow",
            "-moz-box-shadow",
            "interpolation-mode",
            "-webkit-filter",
            "filter",
            "backdrop-filter",
            "clip",
            "clip-path",
            "clip-rule",
            "resize",
            "-webkit-user-select",
            "-moz-user-select",
            "-ms-user-select",
            "user-select",
            "-webkit-tap-highlight-color",
            "nav-index",
            "nav-up",
            "nav-right",
            "nav-down",
            "nav-left",
            "touch-action",
            "will-change",
            "zoom",
            "fill",
            "fill-rule",
            "stroke"
          ]
        },
        {
          "groupName": "Transition",
          "emptyLineBefore": "never",
          "properties": [
            "animation",
            "-webkit-animation",
            "-moz-animation",
            "-ms-animation",
            "-o-animation",
            "animation",
            "-webkit-animation-name",
            "-moz-animation-name",
            "-ms-animation-name",
            "-o-animation-name",
            "animation-name",
            "-webkit-animation-duration",
            "-moz-animation-duration",
            "-ms-animation-duration",
            "-o-animation-duration",
            "animation-duration",
            "-webkit-animation-play-state",
            "-moz-animation-play-state",
            "-ms-animation-play-state",
            "-o-animation-play-state",
            "animation-play-state",
            "-webkit-animation-timing-function",
            "-moz-animation-timing-function",
            "-ms-animation-timing-function",
            "-o-animation-timing-function",
            "animation-timing-function",
            "-webkit-animation-delay",
            "-moz-animation-delay",
            "-ms-animation-delay",
            "-o-animation-delay",
            "animation-delay",
            "-webkit-animation-iteration-count",
            "-moz-animation-iteration-count",
            "-ms-animation-iteration-count",
            "-o-animation-iteration-count",
            "animation-iteration-count",
            "-webkit-animation-direction",
            "-moz-animation-direction",
            "-ms-animation-direction",
            "-o-animation-direction",
            "animation-direction",
            "-webkit-animation-fill-mode",
            "-moz-animation-fill-mode",
            "-ms-animation-fill-mode",
            "-o-animation-fill-mode",
            "animation-fill-mode"
          ]
        }
      ],
      {
        "unspecified": "bottom"
      }
    ],
    "selector-class-pattern": [
      "^(?![a-zA-Z\\d]+(_{3,}|-{3,}))(?!(_|-)$)(?![-a-zA-Z\\d]+(_|-{2})[-a-zA-Z\\d]+(_|-{2}))(?![-a-zA-Z\\d]+(__)[-a-zA-Z]+(__))(?![^a-zA-Z\\d_\\-\\s]).*$",
      {
        "resolveNestedSelectors": true,
        "message": "Selector class pattern must match BEM"
      }
    ],
    "selector-id-pattern": [
      "^[a-zA-Z0-9\\d_\\-]+$",
      {
        "message": "Incorrect ID pattern"
      }
    ],
    "keyframes-name-pattern": null,
    "scss/double-slash-comment-empty-line-before": null,
    "comment-whitespace-inside": null,
    "comment-no-empty": null,
    "scss/comment-no-empty": null,
    "unit-allowed-list": ["px", "em", "rem", "vw", "vh", "dvh", "fr", "deg", "s", "%", ""],
    "declaration-property-value-no-unknown": true,
    "no-unknown-custom-media": true,
    "declaration-no-important": [
      true,
      {
        "severity": "warning"
      }
    ],
    "selector-max-type": [
      0,
      {
        "severity": "warning",
        "ignore": "compounded"
      }
    ],
    "selector-max-specificity": [
      "0,4,1",
      {
        "severity": "warning",
        "message": "Selector is too specific."
      }
    ],
    "selector-max-id": [
      0,
      {
        "severity": "warning"
      }
    ],
    "comment-empty-line-before": null,
    "custom-property-empty-line-before": null,
    "number-max-precision": 3,
    "selector-max-attribute": [
      2,
      {
        "severity": "warning"
      }
    ],
    "selector-max-combinators": [
      3,
      {
        "severity": "warning"
      }
    ],
    "alpha-value-notation": "number",
    "declaration-block-no-duplicate-properties": true,
    "color-function-notation": null,
    "property-no-vendor-prefix": null,
    "color-no-invalid-hex": true
  },
  "ignoreFiles": ["node_modules/**/*", "dist/**/*"]
}
